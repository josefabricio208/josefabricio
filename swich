#include <iostream>

int main() {
    int opcion;

    std::cout << "Ingrese una opcion (1-3): ";
    std::cin >> opcion;

    switch(opcion) {
        case 1:
            std::cout << "Opcion 1 seleccionada" << std::endl;
            break;
        case 2:
            std::cout << "Opcion 2 seleccionada" << std::endl;
            break;
        case 3:
            std::cout << "Opcion 3 seleccionada" << std::endl;
            break;
        default:
            std::cout << "Opcion invalida" << std::endl;
            break;
    }

    return 0;
}
